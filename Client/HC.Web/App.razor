<CascadingAuthenticationState>
    <LayoutView Layout="@typeof(MainLayout)">
        <Router AppAssembly="@GetType().Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData">
                    <NotAuthorized>
                        <NotAuthorizedComponent />
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <PageNotFound />
            </NotFound>
        </Router>
    </LayoutView>
</CascadingAuthenticationState>