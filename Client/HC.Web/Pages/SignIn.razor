@page "/sign-in"

<h3>SignIn</h3>

<EditForm Model="_signInModel" OnValidSubmit="DoSignIn">
    <div class="form-group">
        <label for="UserName">UserName</label>
        <InputText @bind-Value="_signInModel.UserName" id="UserName" class="form-control" />
        <ValidationMessage For="@(() => _signInModel.UserName)" />
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <InputText @bind-Value="_signInModel.Password" id="Password" class="form-control" />
        <ValidationMessage For="@(() => _signInModel.Password)" />
    </div>

    <button type="submit" class="btn btn-success" style="margin-top: 30px;">SignIn</button>
</EditForm>

@if (string.IsNullOrEmpty(_message) is false)
{
    <h3>@_message</h3>
}